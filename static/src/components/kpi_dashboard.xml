<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="owl.KpiDashboard" owl="1">
        <section class="dashborad__section">
            <div class="dashboard__header">
                <div class="header__select">
                    <!-- header form -->
                    <section class="header__form">
                        <div class="form__group">
                            <label for="region">Distributor</label>
                            <select name="distributor" id="distributor">
                                <option value="">Select Distributor</option>
                                <option value="dhaka">Dhaka</option>
                            </select>
                        </div>
                        <div class="form__group">
                            <label for="time-period">Time Period</label>
                            <select name="time-period" id="time-period">
                                <option value="">Custom Date</option>
                                <option value="11/12/2024">11/12/2024</option>
                            </select>
                        </div>
                        <div class="form__group">
                            <label for="start-date">* Start Date</label>
                            <input type="date" name="start-date" id="start-date" />
                        </div>
                        <div class="form__group">
                            <label for="end-date">* End Date</label>
                            <input type="date" name="end-date" id="end-date" />
                        </div>
                        <div class="form__group">
                            <label for="region">Region</label>
                            <select name="region" id="region">
                                <option value="">Select region</option>
                                <option value="dhaka">Dhaka</option>
                            </select>
                        </div>
                        <div class="form__group">
                            <label for="sub-region">Sub Region</label>
                            <select name="sub-region" id="sub-region">
                                <option value="">Select sub-region</option>
                                <option value="dhaka">Dhaka</option>
                            </select>
                        </div>
                        <div class="form__group">
                            <label for="country">Country</label>
                            <select name="country" id="country">
                                <option value="">Select country</option>
                                <option value="bangladesh">Bangladesh</option>
                            </select>
                        </div>
                        <div class="form__group">
                            <label for="territory">Territory</label>
                            <select name="territory" id="territory">
                                <option value="">Select territory</option>
                                <option value="dhaka">Dhaka</option>
                            </select>
                        </div>
                        <div class="form__group">
                            <label for="area">Area</label>
                            <select name="area" id="area">
                                <option value="">Select area</option>
                                <option value="dhaka">Dhaka</option>
                            </select>
                        </div>
                        <div class="form__group">
                            <label for="branch">Branch</label>
                            <select name="branch" id="branch">
                                <option value="">Select branch</option>
                                <option value="dhaka">Dhaka</option>
                            </select>
                        </div>
                        <div class="form__group">
                            <label for="currency">Currency</label>
                            <select name="currency" id="currency">
                                <option value="">Select currency</option>
                                <option value="usd">USD</option>
                            </select>
                        </div>
                        <div class="btn__group">
                            <button class="form__btn apply__btn" type="submit">Apply</button>
                            <button class="form__btn reset__btn" type="reset">Reset</button>
                        </div>
                    </section>
                </div>
                <!-- header nav link -->
                <ul class="header__list">
                    <li class="list__item">
                        <a href="" class="item__link">QSSA Reference</a>
                    </li>
                    <li class="list__item">
                        <a href="" class="item__link">Documentation</a>
                    </li>
                    <li class="list__item">
                        <a href="" class="item__link">Data Refreash Status</a>
                    </li>
                    <li class="list__item">
                        <a href="" class="item__link">QSSA Status - WIP</a>
                    </li>
                    <li class="list__item">
                        <a href="" class="item__link">Master Data</a>
                    </li>
                </ul>
            </div>
            <div class="dashboard__content">
                <!-- item 1 -->
                <div class="dashboard__item">
                    <div class="dashboard__title">
                        <h2>Groth Mindset</h2>
                    </div>
                    <div class="dashboard__card">
                        <div class="card__header">WO Count</div>
                        <div class="card__group">
                            <KpiCard
                                    value="state.growthMindSet.woCount.open"
                                    title="'Open'"
                            />
                            <KpiCard
                                    value="state.growthMindSet.woCount.invoiced"
                                    title="'Invoiced'"
                            />
                        </div>
                    </div>
                    <div class="dashboard__card">
                        <div class="card__area">
                            <h3 class="box__digit">3551</h3>
                            <h4 class="box__title">Service Operating Sales</h4>
                        </div>
                    </div>
                    <div class="dashboard__card">
                        <div class="card__header">WIP</div>
                        <div class="card__group">
                            <KpiCard
                                    value="53551"
                                    title="'Wo Count'"
                            />
                            <KpiCard
                                    value="53551"
                                    title="'Cost'"
                            />
                            <KpiCard
                                    value="56451"
                                    title="'Billable Amount'"
                            />
                        </div>
                    </div>
                </div>
                <!-- item 2 -->
                <div class="dashboard__item">
                    <div class="dashboard__title">
                        <h2>Positively Impacting Employees</h2>
                    </div>
                    <KpiCard
                            value="0.00"
                            title="'Recordable Incident Rate'"
                    />
                    <KpiCard
                            value="0.00"
                            title="'Near Hit / Miss Rate'"
                    />
                    <KpiCard
                            value="0.00"
                            title="'JSO Completion Rate'"
                    />
                    <KpiCard
                            value="0.00"
                            title="'N/A'"
                    />
                </div>
                <!-- item 3 -->
                <div class="dashboard__item">
                    <div class="dashboard__title">
                        <h2>Operational Efficiencies</h2>
                    </div>
                    <KpiCard
                            value="21.4"
                            title="'TB %'"
                            isParcent='true'
                    />
                    <KpiCard
                            value="54.4"
                            title="'Productivity'"
                            isParcent='true'
                    />
                    <KpiCard
                            value="34.6"
                            title="'Labour Utilization'"
                            isParcent='true'
                    />
                    <KpiCard
                            value="34.8"
                            title="'N/A'"
                            isParcent='true'
                    />
                </div>
            </div>
        </section>
        <div style="margin-bottom:25px;"></div>
    </t>
</templates>