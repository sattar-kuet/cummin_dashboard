<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
	<t t-name="owl.WoAging" owl="1">
		<div class="vh-100 overflow-auto">
			<section class="dashborad__section">
				<Header/>
				<Filter/>
				<Table data="state.name"/>
				<section class="chart__section bg-white">
					<div></div>
					<ChartRenderer3 type="'bar'" title="'Wo Aging'"
                bg_color="'#AA2E24'" data="state.woAgingChartData"/>
					<div></div>
				</section>
				<section class="main__table sticky-top bg-white">
					<table>
						<thead>
							<tr class="highlighted">
								<th ></th>
								<th ></th>
								<th colspan="3">Order Age</th>
								<th >Applied</th>
								<th colspan="4">Billable Amount</th>
								<th colspan="4">Cost</th>
							</tr>
						</thead>
						<tbody>
							<tr class="highlighted">
								<td>Region</td>
								<td>Order Count</td>
								<td>0 to 30</td>
								<td>31 to 80</td>
								<td>&gt;80</td>
								<td>Labour Hours</td>
								<td>0 to 30</td>
								<td>31 to 80</td>
								<td>&gt;80</td>
								<td>Total for all Open WO</td>
								<td>0 to 30</td>
								<td>31 to 80</td>
								<td>&gt;80</td>
								<td>Total</td>
							</tr>
							<t t-set="total" t-value="state.woAginTableData.total"/>
							<t t-foreach="state.woAginTableData.rows" t-as="rowData" t-key="rowData.key">
								<tr>
									<td>
										<t t-esc="rowData.country_name"/>
									</td>
									<td>
										<t t-esc="rowData.order_count"/>
									</td>
									<td>
										<t t-esc="rowData.order_0_30"/>
									</td>
									<td>
										<t t-esc="rowData.order_31_80"/>
									</td>
									<td>
										<t t-esc="rowData.order_81_infinity"/>
									</td>
									<td>
										<t t-esc="rowData.labour_hours"/>
									</td>
									<td>
										<t t-esc="rowData.billable_amount_0_30"/>
									</td>
									<td>
										<t t-esc="rowData.billable_amount_31_80"/>
									</td>
									<td>
										<t t-esc="rowData.billable_amount_81_inifinity"/>
									</td>
									<td>
										<t t-esc="rowData.billable_amount"/>
									</td>
									<td>
										<t t-esc="rowData.cost_0_30"/>
									</td>
									<td>
										<t t-esc="rowData.cost_31_80"/>
									</td>
									<td>
										<t t-esc="rowData.cost_81_inifinity"/>
									</td>
									<td>
										<t t-esc="rowData.cost"/>
									</td>
								</tr>
							</t>
							<tr class="highlighted">
								<td>Grand Total</td>
								<td>
									<t t-esc="total.order_count"/>
								</td>
								<td>
									<t t-esc="total.order_0_30"/>
								</td>
								<td>
									<t t-esc="total.order_31_80"/>
								</td>
								<td>
									<t t-esc="total.order_81_infinity"/>
								</td>
								<td>
									<t t-esc="total.labour_hours"/>
								</td>
								<td>
									<t t-esc="total.billable_amount_0_30"/>
								</td>
								<td>
									<t t-esc="total.billable_amount_31_80"/>
								</td>
								<td>
									<t t-esc="total.billable_amount_81_inifinity"/>
								</td>
								<td>
									<t t-esc="total.billable_amount"/>
								</td>
								<td>
									<t t-esc="total.cost_0_30"/>
								</td>
								<td>
									<t t-esc="total.cost_31_80"/>
								</td>
								<td>
									<t t-esc="total.cost_81_inifinity"/>
								</td>
								<td>
									<t t-esc="total.cost"/>
								</td>
							</tr>
						</tbody>
					</table>
				</section>
			</section>
		</div>
	</t>
</templates>